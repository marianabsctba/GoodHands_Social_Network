@model IEnumerable<GoodHands.Domain.Model.Models.Post>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiverProfile.GiverName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiverProfile.GiverName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                    <i class="far fa-edit"> </i>
                    Edit
                </a>

                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                    <i class="fas fa-eye"> </i>
                    Details
                </a>

                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="far fa-trash-alt"> </i>
                    Delete
                </a>
            </td>

        </tr>
}
    </tbody>
</table>
